{
  "compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "esnext",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"],
      "@img": ["./public/images"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.woff"],
  "exclude": ["node_modules"]
}
